<%- include partials/header.ejs %>

<%- include partials/top_nav.ejs %>

<main class="l-main">
  <!--========== HOME ==========-->
  <section class="home section" id="home">
    <div class="home__container bd-container">
        <div class="home__data">
            <h1 class="home__title">Welcome, Fellow Coder &amp; <p class="<%= className%>"><%= name%></p></h1>
            <!-- <h2 class="home__subtitle">Try the best food of <br> the week.</h2> -->
            <h3 class="home__subtitle">At Happy Coding, my passion is to make coding joyful, accessible, and inclusive. I provide high-quality resources, foster myself with a positive learning environment, and promote diversity in the tech industry. Join me in spreading the joy of coding and creating a happier, more innovative world.</h3>
            
        </div>
    </div>
  </section>

  <!--========== ABOUT ==========-->
  <section class="about section bd-container" id="about">
    <div class="about__container">
        <div class="about__data bd-flex">
            <img class="about__img" src="images/coder-2.png">
            <a class="button about__link" href="/about">More About Me <i class="fa-solid fa-arrow-right" style="padding-left: 5px"></i></a>
        </div>

    </div>
  </section>

  <!--========== SERVICES ==========-->
  <section class="services section bd-container" id="services">
      <div class="services__container">
        <div class="services__table bd-flex bd-container">
          <div class="services__detail">

            <div class="services__skill-container">
              <div class="services__skill-header bd-flex">
                <div class="services__logo-container"><i class="fa-solid fa-code skill-logo"></i></div>
                <h3 class="skill__title">Frontend Developer</h3>
                <p class="skill__description">I focuses on creating a user-friendly and visually appealing interface that enables users to interact with a software application or website.</p>
              </div>
            </div>

            <div class="services__skill-container">
              <div class="services__skill-header bd-flex">
                <div class="services__logo-container"><i class="fa-solid fa-database skill-logo"></i></div>
                <h3 class="skill__title">Database</h3>
                <p class="skill__description">I like to use effecient managing and organizing data storage for manipulation of information for different purposes.</p>
              </div>
            </div>

            <div class="services__skill-container">
              <div class="services__skill-header bd-flex">
                <div class="services__logo-container"><i class="fa-solid fa-mobile skill-logo"></i></div>
                <h3 class="skill__title">Mobile Development</h3>
                <p class="skill__description">I enjoy in creating applications that are specifically tailored for mobile devices.</p>
              </div>
              

            </div>

          </div>
          <button class="button__image" onclick="window.location.href='/services'">
            <a class="button__label" href="/services">Service Detail <i class="fa-solid fa-arrow-right" style="padding-left: 5px"></i></a>
          </button>
        </div>

        <div class="services__content">
          <div class="bd-flex bd-container">
            <h1 class="services__title">Hi, I'm Pham. Happy to meet you.</h1>
            <h2 class="services__subtitle">I love programming and always keep improving my skills as much as possible. I am really interested in the Web Development as well as Developing Mobile apps.</h2>
          </div>
          
        </div>

          
      </div>
  </section>

  <!--========== PROJECTS ==========-->
  <section class="projects section bd-container" id="projects">
    <div class="projects__container">
      <h1 class="projects__title">My Recent Work</h1>
      <h2 class="projects__subtitle">Check out my previous projects. </h2>
      <div class="projects__grid">  
        <div class="project__content">
          <figure class="project__image">
            <img class="project__thumb" src="images/groceries.jpg">
            <div class="project__overlay grocery"></div>
            <figcaption class="project__figcaption p1">
              <h1 class="project__caption-title">Neighborhood Groceries: Providing Local Flavor and Everyday Essentials</h1>
              <a class="project__figure-link p1" href="/projects">View More</a>
            </figcaption>
            
          </figure>
        </div>

        <div class="project__content">
          <figure class="project__image">
            <img class="project__thumb" src="images/restaurant.jpg">
            <div class="project__overlay restaurant"></div>
            <figcaption class="project__figcaption p2">
              <h1 class="project__caption-title">Full potential of your restaurant with my cost-effective POS application</h1>
              <a class="project__figure-link p2" href="/projects">View More</a>
            </figcaption>
            
          </figure>
        </div>

        <div class="project__content">
          <figure class="project__image">
            <img class="project__thumb" src="images/euro-dollar-bills.jpg">
            <div class="project__overlay currency"></div>
            <figcaption class="project__figcaption p3">
              <h1 class="project__caption-title">With currency rates app, stay informed real-time currency rates at your fingertips</h1>
              <a class="project__figure-link p3" href="/projects">View More</a>
            </figcaption>
            
          </figure>
        </div>
        
      </div>
      <div class="projects__link-container">

        <a class="projects__link" href="/projects">Project Detail <i class="fa-solid fa-arrow-right" style="padding-left: 5px"></i></a>
      </div>
      
    </div>
  </section>

  <!-- Section Contact -->
  <section class="contact section bd-container section__edit" id="contact">
    <div class="contact__container">
      <div class="contact__header">
        <h1 class="contact__title">Contact <a href="/contact" class="contact__link">View More</a> </h1> 
        <h2 class="contact__subtitle">Have a question or want to work with me?</h2>
        
      </div>
      <div class="contact__form">
        <%- include partials/contact_form.ejs %>
      </div>
    </div>
  </section>

</main>

<%- include partials/footer.ejs %>
     
<%- include partials/bottom.ejs %>  
